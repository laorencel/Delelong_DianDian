<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarSize">40dp</item>
        <!--actionBar消除阴影-->
        <item name="android:windowContentOverlay">@null</item>
        <!--textView文本颜色-->
        <item name="android:textColor">#414141</item>
        <!--actionBar返回按钮图标-->
        <item name="android:homeAsUpIndicator">@mipmap/back_arrow</item>
    </style>
    <style name="MyActionBarStyle" parent="AppTheme">
        <item name="android:background">@color/colorActionBarBg</item>
        <!-- Support library compatibility -->
        <item name="background">@color/colorActionBarBg</item>
        <!--解决左边一直有一块边距的问题 contentInsetStart = 0 -->
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
    </style>
</resources>
