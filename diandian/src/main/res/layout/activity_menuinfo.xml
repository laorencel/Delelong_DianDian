<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_height="match_parent">
    <RelativeLayout
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/arrow_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/back_arrow"/>
        <TextView
            android:id="@+id/tv_modifyInfo"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="编辑资料"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="15dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_head"
            android:background="@mipmap/img_head_menuinfo"
            android:layout_width="150dp"
            android:layout_margin="20dp"
            android:layout_height="150dp" />
        <TextView
            android:id="@+id/tv_nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="余先生"
            android:layout_marginBottom="20dp"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/tv_signature"
            android:layout_marginBottom="30dp"
            android:layout_width="wrap_content"
            android:text="还未填写个性签名，介绍下自己吧"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="15dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_vip"
            android:layout_width="20dp"
            android:src="@mipmap/ic_launcher"
            android:layout_height="20dp" />
        <TextView
            android:id="@+id/tv_vip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:layout_toRightOf="@id/img_vip"
            android:layout_width="wrap_content"
            android:text="优选会员"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_vip_detail"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:text="会员专属徽章"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_certification"
            android:layout_width="20dp"
            android:src="@mipmap/ic_launcher"
            android:layout_height="20dp" />
        <TextView
            android:id="@+id/tv_certification"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:layout_toRightOf="@id/img_certification"
            android:layout_width="wrap_content"
            android:text="实名认证"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_certification_detail"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:text="未认证"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_owner"
            android:layout_width="20dp"
            android:src="@mipmap/ic_launcher"
            android:layout_height="20dp" />
        <TextView
            android:id="@+id/tv_owner"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:layout_toRightOf="@id/img_owner"
            android:layout_width="wrap_content"
            android:text="车主认证"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>
